<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mypixeleffect">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_img"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/app_img"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyPixelEffect">
        <activity
            android:name=".Activity.Full_Screen_Image_Activity"
            android:exported="false" />
        <activity
            android:name=".Activity.Image_Activity"
            android:exported="false" />
        <activity
            android:name=".Activity.Crop_Activity"
            android:exported="false" />
        <activity
            android:name=".Activity.Photo_Editing_Activity"
            android:exported="false" />
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Crop.CropImageActivity"
            android:exported="true" />
    </application>

</manifest>